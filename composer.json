{
    "name": "azpayments/epoint-laravel",
    "description": "Epoint.az payment gateway integration for Laravel. Easy integration for Azerbaijan e-commerce projects.",
    "keywords": ["laravel", "epoint", "payment", "azerbaijan", "gateway", "azn", "ecommerce"],
    "license": "MIT",
    "authors": [
        {
            "name": "Elgun Heydarli",
            "email": "elgunhaydarli@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "AZPayments\\Epoint\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AZPayments\\Epoint\\EpointServiceProvider"
            ],
            "aliases": {
                "Epoint": "AZPayments\\Epoint\\Facades\\Epoint"
            }
        }
    },
    "minimum-stability": "stable"
}